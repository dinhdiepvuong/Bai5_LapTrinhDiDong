<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityScreen02">

    <Button
        android:id="@+id/btnBoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#EADEDE"
        android:text="boy"
        android:textColor="#1B1818"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGirl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:backgroundTint="#EADEDE"
        android:text="GIRL"
        android:textColor="#201E1E"
        app:layout_constraintBottom_toBottomOf="@+id/btnBoy"
        app:layout_constraintStart_toEndOf="@+id/btnBoy"
        app:layout_constraintTop_toTopOf="@+id/btnBoy" />

    <Button
        android:id="@+id/btnAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:backgroundTint="#EADEDE"
        android:text="ALL"
        android:textColor="#1E1D1D"
        app:layout_constraintBottom_toBottomOf="@+id/btnGirl"
        app:layout_constraintStart_toEndOf="@+id/btnGirl"
        app:layout_constraintTop_toTopOf="@+id/btnGirl"
        app:layout_constraintVertical_bias="0.0" />

    <GridView
        android:numColumns="2"
        android:id="@+id/gvList"
        android:layout_width="409dp"
        android:layout_height="620dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGirl" />
</androidx.constraintlayout.widget.ConstraintLayout>